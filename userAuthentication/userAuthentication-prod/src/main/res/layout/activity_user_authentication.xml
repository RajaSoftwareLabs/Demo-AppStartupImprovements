<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/user_authentication_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/user_authentication_title_text"
        app:layout_constraintBottom_toTopOf="@+id/user_authentication_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/user_authentication_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/user_authentication_button_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/user_authentication_title" />

</androidx.constraintlayout.widget.ConstraintLayout>